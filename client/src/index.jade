-var isDevMode = true
-var name = "Single identity, multiple alias"
-var bootstrapVer = "3.2.0"
-var ngVer = "1.2.23"
-var jQueryVer = "1.7.2"
-var ngUIRouter = "0.2.8"
-var jsExt = isDevMode ? ".js" : ".min.js"

//- Utils
mixin ie(condition)
  | <!--[!{condition}]>
  block
  | <![endif]-->

doctype html
html(lang="en", ng-app="app")
  head
    //-base(href="/")
    
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Track single identity through many accounts")
    meta(name="author", content="Josh Helpert")
    
    title(ng-bind-template="{{pageTitle}}")
    
    link(rel="stylesheet", href="/vendor/bootstrap/dist/css/bootstrap.min.css")
    //-link(rel="stylesheet", href="/css/app.css") //- TODO: Override CSS
  body(ng-controller="AppCtrl")
    .wrapper
      // Top Navbar
      .navbar.navbar-static-top
        .navbar-inner
          .container
            button.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a(href="/").brand #{name}
            .nav-collapse
              div
                include app/nav/templates/nav
      
      // Main content
      .container.main-content
        //div(ui-view="main")
        div(ui-view)
          div Loading partial...
        div Angular Brunch seed app: v<span app-version></span>
      .push
    
    // Footer
    footer.footer
      .container
        p
          small
            a(href="https://github.com/scotch/angular-brunch-seed") angular-brunch-seed | source
    
    // Scripts
    +ie("lte IE 7")
      script(src="http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js")
    +ie("lte IE 8")
      script(src="//html5shiv.googlecode.com/svn/trunk/html5.js")
    script(src="/vendor/jquery/dist/jquery" + jsExt)
    script(src="/vendor/bootstrap/dist/js/bootstrap" + jsExt)
    script(src="/vendor/angular/angular" + jsExt)
    script(src="/vendor/angular-ui-router/release/angular-ui-router" + jsExt)
    script(src="/vendor/angular-bootstrap/ui-bootstrap" + jsExt)
    script(src="/templates.js") // Later rework this to be included in app.min.js
    script(src="/js/app.min.js")
